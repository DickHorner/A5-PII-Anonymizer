{
  "type": "module",
  "name": "a5-pii-anonymizer",
  "version": "0.0.1",
  "main": "main.js",
  "description": "A short description of your app",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "prebuild:win": "node scripts/prepare-canvas-dirs.js",
    "build:win:fix": "npm run prebuild:win && electron-builder --win",
    "build:linux": "electron-builder --linux",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "exceljs": "^4.3.0",
    "@xenova/transformers": "2.17.2",
    "mammoth": "^1.11.0",
    "docx": "^9.5.1",
    "pdf-parse": "^2.4.5",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "prettier": "^3.3.3"
  },
  "build": {
    "productName": "A5 PII Anonymizer",
    "appId": "com.a5.piiAnonymizer",
    "mac": {
      "icon": "assets/icon",
      "category": "public.app-category.utilities"
    },
    "win": {
      "icon": "assets/icon",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "!node_modules/@napi-rs/**",
      "!node_modules/pdfjs-dist/**",
      "**/*",
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "icon.png"
        ]
      }
    ]
  },
  "overrides": {
    "glob": "^10.3.10",
    "rimraf": "^4.4.1"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  }
}
